@model StepMembershipViewModel
@{
    Layout = "_LayoutWizard";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="form-group">
    <label asp-for="MembershipNumber"></label>
    <input asp-for="MembershipNumber" class="form-control" />
    <span asp-validation-for="MembershipNumber" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="ExpiryDate"></label>
    <input asp-for="ExpiryDate" class="form-control" />
    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="IssuePlace"></label>
    <input asp-for="IssuePlace" class="form-control" />
    <span asp-validation-for="IssuePlace" class="text-danger"></span>
</div>